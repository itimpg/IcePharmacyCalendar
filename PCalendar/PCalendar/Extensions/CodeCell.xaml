<?xml version="1.0" encoding="utf-8" ?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCalendar.Extensions.CodeCell">
    <StackLayout Orientation="Horizontal" Margin="17, 0">
        <Label Text="{Binding Label}" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand"/>
        <Label VerticalOptions="Center" HorizontalOptions="EndAndExpand" Text="{Binding Code}" TextColor="Gray"/>
    </StackLayout>
</ViewCell>