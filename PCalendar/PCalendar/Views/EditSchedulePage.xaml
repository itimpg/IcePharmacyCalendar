<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCalendar.Views.EditSchedulePage"
             Title="{Binding Item.ScheduleDate, StringFormat='{0:d MMM yyyy}'}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="เสร็จ" Activated="DoneToolbarItem_Activated"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="13, 5">
            <Picker x:Name="PickerCode1" Title="Code1"/>
            <Picker x:Name="PickerCode2" Title="Code2"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="ไปร้านยา" HorizontalOptions="StartAndExpand"/>
                <Switch x:Name="SwitchIsPharmacy"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="ตั้งแต่" HorizontalOptions="StartAndExpand"/>
                <TimePicker x:Name="TimeFrom" 
                            IsVisible="{Binding Source={x:Reference SwitchIsPharmacy}, Path=IsToggled}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="ถึง" HorizontalOptions="StartAndExpand"/>
                <TimePicker x:Name="TimeTo" 
                            IsVisible="{Binding Source={x:Reference SwitchIsPharmacy}, Path=IsToggled}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>